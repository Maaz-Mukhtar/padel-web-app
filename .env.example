# ============================================
# PADEL PLATFORM - ENVIRONMENT TEMPLATE
# Copy this file to .env.development for development
# ============================================

# Node Environment
NODE_ENV=development

# ============================================
# MICROSERVICES CONFIGURATION
# ============================================

# Service Ports
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
BOOKING_SERVICE_PORT=3003
NOTIFICATION_SERVICE_PORT=3004

# Frontend URLs (for CORS)
FRONTEND_URLS=http://localhost:3000

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=padel_platform
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password

# Individual Database URLs
AUTH_DATABASE_URL="postgresql://username:password@localhost:5432/auth_db?schema=public"
USER_DATABASE_URL="postgresql://username:password@localhost:5432/user_db?schema=public"
BOOKING_DATABASE_URL="postgresql://username:password@localhost:5432/booking_db?schema=public"
NOTIFICATION_DATABASE_URL="postgresql://username:password@localhost:5432/notification_db?schema=public"

# ============================================
# CACHE & SESSION CONFIGURATION
# ============================================

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Session Configuration
SESSION_SECRET=your_session_secret_min_32_characters

# ============================================
# AUTHENTICATION & SECURITY (Week 2)
# ============================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_min_32_characters
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_characters
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# Encryption Keys
ENCRYPTION_KEY=your_encryption_key_32_characters

# ============================================
# LOGGING & MONITORING
# ============================================

# Log Level
LOG_LEVEL=info

# ============================================
# CORS & SECURITY
# ============================================

# CORS Settings
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

