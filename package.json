{
  "name": "@padel-platform/root",
  "version": "1.0.0",
  "description": "Pakistan's Premier Padel Booking Platform - Comprehensive microservices solution for padel court booking and community management",
  "private": true,
  "workspaces": [
    "services/*",
    "frontend/*",
    "shared/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:services\" \"npm run dev:frontend\"",
    "dev:services": "concurrently \"npm run dev -w services/auth\" \"npm run dev -w services/user\" \"npm run dev -w services/booking\" \"npm run dev -w services/notification\"",
    "dev:frontend": "npm run dev -w frontend/web",
    "build": "npm run build --workspaces",
    "build:services": "npm run build -w services/auth && npm run build -w services/user && npm run build -w services/booking && npm run build -w services/notification",
    "build:frontend": "npm run build --workspaces --workspace=frontend/*",
    "test": "jest",
    "test:unit": "jest --testPathPattern='\\.spec\\.ts$'",
    "test:integration": "jest --testPathPattern='\\.integration\\.ts$'",
    "test:e2e": "jest --testPathPattern='\\.e2e\\.ts$'",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:services": "npm run test --workspaces --workspace=services/*",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "type-check": "npm run type-check --workspaces",
    "quality:check": "npm run lint && npm run format:check && npm run type-check",
    "quality:fix": "npm run lint:fix && npm run format",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.override.yml up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "db:migrate": "npm run db:migrate -w services/auth && npm run db:migrate -w services/user && npm run db:migrate -w services/booking && npm run db:migrate -w services/notification",
    "db:seed": "npm run db:seed -w services/auth && npm run db:seed -w services/user && npm run db:seed -w services/booking && npm run db:seed -w services/notification",
    "prepare": "husky install"
  },
  "keywords": [
    "padel",
    "booking",
    "sports",
    "pakistan",
    "microservices",
    "nestjs",
    "nextjs",
    "typescript",
    "platform"
  ],
  "author": {
    "name": "Maaz Mukhtar",
    "email": "maazmukhtar95@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Maaz-Mukhtar/padel-web-app.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^15.5.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
